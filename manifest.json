{
  "name": "College Forces",
  "description": "College standings and bookmarking for Codeforces.",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/logo.png",
      "32": "assets/logo.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://codeforces.com/ratings/organization/*"
      ],
      "js": ["scripts/bookmarkScript.js"]
    },
    {
      "matches": [
        "https://codeforces.com/contest/*/standings"
      ],
      "js": ["scripts/contentScript.js"]
    },
    {
      "matches": [
        "https://codeforces.com/contest/*/standings?list=*"
      ],
      "js": ["scripts/dropdownListScript.js"]
    }
  ],
  "background": {
    "service_worker": "scripts/listScript.js"
  }
}
